package by.lukash.HW6Task1.bean;

public class ForOddChecker implements Runnable{

        public void showOddNumbersFromZeroToFifty() {
            for (int i = 0; i <=50; i++) {
                if (i%2 == 0) {
                    continue;
                }
                System.out.println("i through 'for' = " + i);
            }

        }

        @Override
        public void run() {
            ForOddChecker forOddChecker = new ForOddChecker();
            forOddChecker.showOddNumbersFromZeroToFifty();
        }
    }

