package by.lukash.HW6Task1.bean;

public class WhileOddChecker implements Runnable {

    public void showOddNumbersFromZeroToFifty() {
        int i = 0;
        while (i <=50 ) {
            if (i%2 == 0) {
                i++;
                continue;
            }
            System.out.println("i through 'While' = " + i);
            i++;
        }

    }

    @Override
    public void run() {
        WhileOddChecker whileOddChecker = new WhileOddChecker();
        whileOddChecker.showOddNumbersFromZeroToFifty();
    }
}
